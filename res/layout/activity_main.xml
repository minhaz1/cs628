<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/offwhite"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    android:gravity="center">
	
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/tinge_orange"
        android:layout_marginBottom="45sp"
        android:gravity="left"
        android:textSize="60sp">
        </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="20sp">

 <Button
     android:id="@+id/contact_screen_button"
     android:layout_width="@dimen/button_width"
     android:layout_height="wrap_content"
     android:background="@color/transparent_black"
     android:text="@string/contact_button_text"
     android:textColor="@color/tinge_orange"
     android:textSize="22sp" >
	        
	    </Button>
    
	<Button
	    android:id="@+id/courses_screen_button"
	    android:layout_width="@dimen/button_width"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20sp"
	    android:background="@color/transparent_black"
	    android:text="@string/course_button_text"
	    android:textColor="@color/tinge_orange"
	    android:textSize="22sp" >
	        
	    </Button>
	</LinearLayout>
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_marginBottom="45sp">

	    <Button
	        android:id="@+id/events_screen_button"
	        android:layout_width="@dimen/button_width"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent_black"
	        android:text="@string/events_button_text"
	        android:textColor="@color/tinge_orange"
	        android:textSize="22sp" >
	        
	    </Button>
	
	    <Button
	        android:id="@+id/news_screen_button"
	        android:layout_width="@dimen/button_width"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15sp"
	        android:background="@color/transparent_black"
	        android:text="@string/news_button_text"
	        android:textColor="@color/tinge_orange"
	        android:textSize="22sp" >
	        
	    </Button>

		</LinearLayout>
   
	    <Button
     android:id="@+id/main_screen_help"
     android:layout_width="@dimen/button_width"
     android:layout_height="wrap_content"
     android:background="@color/transparent_black"
     android:text="Help"
     android:textColor="@color/tinge_orange"
     android:textSize="22sp"
     android:gravity="center"
     android:layout_gravity="center" >
	        
	    </Button>
	    
</LinearLayout>
