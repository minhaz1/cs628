<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactActivity"
    android:id="@+id/contact_layout"
    android:focusable="true"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" 
            android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/name_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"
            android:hint="{ Professor Name } "
       android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>

</TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Type"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/type_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"
            android:hint="{ Faculty Type }"
                   android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Position"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/position_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"
            android:hint=" {Position } "
                   android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Office Hours "
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/office_hours_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"

            android:hint="{ Office Hours } "
                   android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Office"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/office_location_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"

            android:hint="{ Office Locations } "
                   android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Phone Number"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/phone_number_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"

            android:hint="{ Phone Number } "
                  android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="left"
            android:text="Email"
            android:textColor="@color/tinge_orange"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/email_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="right"

            android:hint="{ Email }"
                   android:textColor="@color/transparent_black"
            android:textSize="15sp" >
        </EditText>
    </TableRow>
</TableLayout>
    <View
 android:layout_width="match_parent"
 android:layout_height="1dp"
 android:background="@android:color/black" 
 android:layout_marginBottom="10dp"/>
    
    <ListView
        android:id="@+id/contactList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.26" />

    <View
 android:layout_width="match_parent"
 android:layout_height="1dp"
 android:background="@android:color/black" 
 android:layout_marginBottom="20dp"/>
    
</LinearLayout>